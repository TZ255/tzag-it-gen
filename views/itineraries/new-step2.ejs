<section class="py-4">
  <h1 class="h5 mb-3">New Itinerary • Step 2</h1>
  <form action="/dashboard/itineraries" method="post" class="sb-form">
    <input type="hidden" name="title" value="<%= titleDraft %>">
    <input type="hidden" name="clientName" value="<%= clientNameDraft || '' %>">
    <input type="hidden" name="startDate" value="<%= startDateDraft %>">
    <input type="hidden" name="adults" value="<%= adultsDraft %>">
    <input type="hidden" name="children" value="<%= childrenDraft %>">

    <div class="card sb-card"><div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead><tr><th>Day</th><th>Route</th><th>Accommodation</th><th>Price (USD)</th></tr></thead>
          <tbody>
            <% (routes || []).forEach(function(r, idx){
                 const options = (accByRoute && accByRoute[r.name]) || [];
            %>
              <tr>
                <td><%= idx+1 %></td>
                <td>
                  <div class="fw-semibold"><%= r.name %></div>
                  <div class="small text-muted"><%= r.origin || '-' %> → <%= r.destination || '-' %></div>
                  <input type="hidden" name="routeId" value="<%= r._id %>">
                </td>
                <td>
                  <select name="accomodationName" class="form-select form-select-sm">
                    <% if (options.length === 0) { %>
                      <option value="<%= r.accomodation?.name || 'N/A' %>"><%= r.accomodation?.name || 'N/A' %></option>
                    <% } else { %>
                      <% options.forEach(function(o){ %>
                        <option value="<%= o.accomodation_name %>" <%= (r.accomodation && r.accomodation.name===o.accomodation_name)?'selected':'' %>><%= o.accomodation_name %></option>
                      <% }) %>
                    <% } %>
                  </select>
                </td>
                <td style="max-width: 220px;">
                  <div class="row g-1">
                    <div class="col-6">
                      <input type="number" name="adult_price" class="form-control form-control-sm" min="0" step="1" placeholder="Adult USD" value="<%= (r.accomodation && r.accomodation.adult_price) || 0 %>">
                    </div>
                    <div class="col-6">
                      <input type="number" name="child_price" class="form-control form-control-sm" min="0" step="1" placeholder="Child USD" value="<%= (r.accomodation && r.accomodation.child_price) || 0 %>">
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div></div>
    <div class="d-flex justify-content-between mt-3">
      <a class="btn btn-outline-secondary" href="/dashboard/itineraries/new">Back</a>
      <button class="btn btn-primary" type="submit">Create Itinerary</button>
    </div>
  </form>
</section>
